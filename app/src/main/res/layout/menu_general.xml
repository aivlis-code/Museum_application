<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#8E6E50">

    <Button
        android:id="@+id/bouton_histoire"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/home_icon"
        android:text="Histoire"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:backgroundTint="@color/backgroundcolor"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bouton_oeuvres"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintVertical_bias="0.3"
        android:layout_marginEnd="4dp"
        app:strokeColor="@color/white"
        app:strokeWidth="1.5dp"/>

    <Button
        android:id="@+id/bouton_oeuvres"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/home_icon"
        android:text="Oeuvres"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:backgroundTint="@color/backgroundcolor"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bouton_histoire"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintVertical_bias="0.3"
        android:layout_marginStart="4dp"
        app:strokeColor="@color/white"
        app:strokeWidth="1.5dp"/>

    <Button
        android:id="@+id/bouton_localisation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/home_icon"
        android:text="Localisation"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:backgroundTint="@color/backgroundcolor"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bouton_infos"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintVertical_bias="0.5"
        android:layout_marginEnd="4dp"
        app:strokeColor="@color/white"
        app:strokeWidth="1.5dp"/>

    <Button
        android:id="@+id/bouton_infos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/home_icon"
        android:text="Infos"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:backgroundTint="@color/backgroundcolor"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bouton_localisation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintVertical_bias="0.5"
        android:layout_marginStart="4dp"
        app:strokeColor="@color/white"
        app:strokeWidth="1.5dp"/>

    <Button
        android:id="@+id/bouton_favoris"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/home_icon"
        android:text="Favoris"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:backgroundTint="@color/backgroundcolor"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.7"
        app:strokeColor="@color/white"
        app:strokeWidth="1.5dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
