<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="43dp"
        android:layout_height="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/backButton1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="-1dp"
            android:background="@color/backgroundcolor"
            android:padding="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/arrow_icon" />

    </RelativeLayout>
    <TextView
        android:id="@+id/MenuGenral"
        style="@style/Museum_app_text"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:text="Menu"
        android:textIsSelectable="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/boutonHistoires"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:backgroundTint="@color/backgroundcolor"
        android:drawableLeft="@drawable/history_icon"
        android:drawablePadding="8dp"
        android:gravity="center"
        android:text="Histoires" />

    <Button
        android:id="@+id/boutonOeuvres"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:backgroundTint="@color/backgroundcolor"
        android:drawableLeft="@drawable/oeuvre_icon"
        android:drawablePadding="8dp"
        android:gravity="center"
        android:text="Oeuvres" />

    <Button
        android:id="@+id/boutonLocalisation"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:backgroundTint="@color/backgroundcolor"
        android:drawableLeft="@drawable/localisation_icon"
        android:drawablePadding="8dp"
        android:gravity="center"
        android:text="Localisation" />

    <Button
        android:id="@+id/boutonInfos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:backgroundTint="@color/backgroundcolor"
        android:drawableLeft="@drawable/info_icon"
        android:drawablePadding="8dp"
        android:gravity="center"
        android:text="Infos" />



</LinearLayout>